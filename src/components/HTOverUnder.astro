                                    {formatLeague(match.league)}
                                </span>{" "}
                                <br />
                                {match.match.split(" - ")[0]} <br />{" "}
                                {match.match.split(" - ")[1]}{" "}
                            </td>
                            <td class="text-center">
                                <span class="inline-block bg-secondary text-base-200 p-2 w-11/12 rounded font-bold">
                                    {FormatTip(match?.tip ?? match?.bet)}
                                </span>
                            </td>
